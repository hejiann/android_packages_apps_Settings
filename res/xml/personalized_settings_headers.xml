<preference-headers
        xmlns:android="http://schemas.android.com/apk/res/android">
        
    <!-- Profiles -->
    <header
        android:id="@+id/profiles_settings"
        android:icon="@drawable/ic_settings_profiles"
        android:fragment="com.android.settings.profiles.ProfilesSettings"
        android:title="@string/profiles_settings_title" />
    
   <!-- Launcher -->
    <header
        android:id="@+id/launcher_settings"
        android:title="@string/launcher_settings_title"
        android:icon="@drawable/ic_settings_desktop" />

    <!-- Lock screen -->
    <header
        android:id="@+id/lock_screen_settings"
        android:fragment="com.android.settings.cyanogenmod.LockscreenInterface"
        android:title="@string/lock_screen_title"
        android:icon="@drawable/ic_settings_lockscreen" />  
        
    <!-- Status_bar -->
    <header
        android:id="@+id/status_bar"
        android:fragment="com.android.settings.cyanogenmod.StatusBar"
        android:icon="@drawable/ic_settings_statubar"
        android:title="@string/combined_status_bar_title" />
    
    <!-- Notification_drawer -->
    <header
        android:id="@+id/notification_drawer"
        android:fragment="com.android.settings.cyanogenmod.PowerWidget"
        android:icon="@drawable/ic_settings_notification"
        android:title="@string/notification_drawer_title" />
    
    <!-- wallpaper -->
    <header
        android:id="@+id/wallpaper"
        android:fragment="com.android.settings.WallpaperTypeSettings"
        android:icon="@drawable/ic_settings_wallpaper"
        android:title="@string/wallpaper_settings_title" />

    <!-- Fonts Setting --> 
    <header
        android:id="@+id/fonts_settings"
        android:fragment="com.android.settings.cyanogenmod.FontsSettings"
        android:icon="@drawable/ic_settings_font"
        android:title="@string/font_options" />
    
    <!-- USB Setting -->
    <header
        android:id="@+id/usb_connect_settings"
        android:fragment="com.android.settings.cyanogenmod.UsbConnectSettings"
        android:icon="@drawable/ic_settings_usbconnect"
        android:title="@string/usb_connection_category" />

    <!-- Performance -->
    <header
        android:id="@+id/performance_settings"
        android:fragment="com.android.settings.cyanogenmod.PerformanceSettings"
        android:icon="@drawable/ic_settings_performance"
        android:title="@string/performance_settings_title" />

</preference-headers>
